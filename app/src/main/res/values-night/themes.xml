<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Base.Theme.Notiflow" parent="Theme.MaterialComponents">
		<item name="android:windowActionModeOverlay">true</item>
	</style>

	<style name="Theme.Notiflow" parent="Base.Theme.Notiflow">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/md_grey_800</item>
		<item name="colorPrimaryVariant">@color/md_grey_900</item>
		<item name="colorOnPrimary">@color/md_white_1000</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/md_indigo_600</item>
		<item name="colorSecondaryVariant">@color/md_indigo_800</item>
		<item name="colorOnSecondary">@color/md_black_1000</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
	</style>


	<style name="Theme.Notiflow.NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="Theme.Notiflow.TransStatus" parent="Theme.Notiflow.NoActionBar">
		<item name="android:windowTranslucentStatus">true</item>
	</style>
</resources>